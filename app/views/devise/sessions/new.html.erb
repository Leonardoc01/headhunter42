<div class="register-box">
  <div class="box-header with-border">
    <h3 class="box-title">Log in</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"} ) do |f| %>
    <div class="box-body">

      <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <%= f.text_field :email, required: false, autofocus: true, class:"form-control", id:"inputEmail3", placeholder:"Email" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"><%= t("password") %></label>
        <div class="col-sm-10">
          <%= f.password_field :password, required: false, class:"form-control", id:"inputPassword3", placeholder:"Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </label>
          </div>
        </div>
      </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <%= f.button :submit, "Log in", class:"btn btn-info pull-right" %>
    </div>
    <!-- /.box-footer -->
  <% end %>
</div>
<%= render "devise/shared/links" %>
