<div class="login-box">
  <div class="login-logo">
    <b>HeadHunter</b>42
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg"><%= t('devise.invitations.edit.header') %></p>

    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } ) do |f| %>

      <%= f.hidden_field :invitation_token %>
      <div class="form-group has-feedback">

        <%= f.password_field :password, required: false, autofocus: true, class: "form-control", id: "inputEmail3", placeholder: "Password" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, required: false, class: "form-control", id: "inputPassword3", placeholder: "Password Confirmation" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-4"></div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
      <%#= devise_error_messages! %>
    <% end %>

  </div>
  <!-- /.login-box-body -->
</div>
