<div class="box box-warning">
  <div class="box-header with-border">
    <h3 class="box-title"><%= action_message %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <!-- <form role="form"> -->
    <%= form_for [:admin, @step] do |f| %>
    <!-- text input -->
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control", placeholder: t("placeholder.step_name") %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :order %>
          <%= f.number_field :order, class:"form-control", min: "1" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-12">
          <%= f.label :description %>
          <%= f.text_area :description, class:"form-control", placeholder: t("placeholder.step_description") %>
        </div>
      </div>

      <h2><%= t('skills') %></h2>

      <div class="box-body">
        <div id='skills'>
          <%= f.fields_for :skills do |skill| %>
            <%= render 'admin/steps/skill_fields', f: skill %>
          <% end %>

          <div class="links col-md-3">
            <%= link_to_add_association t('create_skil'), f, :skills, class: "btn btn-info btn-block btn-flat" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-9">
        </div>
        <div class="col-md-3">
          <%= f.button class:"btn btn-primary btn-block btn-flat" do %>
            <%= t("save") %>
          <% end %>
        </div>
      </div>

    <% end %>
<!-- </form> -->
  </div>
<!-- /.box-body -->
</div>
